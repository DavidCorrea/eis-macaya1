<div class="preamble" id="zen-preamble" role="article">		
		<h3 style="color:white"> Tabla de Posiciones de <%= torneo_actual.name %> </h3>
		<table border="1" style="width:500px">
			<tr>
			  <th align="center">Posicion</th> 
			  <th align="center">Equipo</th>
			  <th align="center">Puntaje</th>
			</tr>
			<% @puntajes.each do | puntaje | %>
			<tr>
				<td align="center">
					<%= @posicion += 1 %>
				</td>
				<td align="center">
                                        <!-- Me quedo con el equipo e imprimo su nombre -->
					<%= (@equipos.first(:id => puntaje.equipo_id)).name %>
				</td>
				<td align="center">
					<%= puntaje.puntaje %>
				</td>
			</tr>
 			<% end %>
		</table>
		<br>
	<%= link_to "Volver", url(:torneos, :show, :torneo_id => torneo_actual.id), :class => 'btn btn-secondary' %>
</div>

